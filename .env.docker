# Docker environment configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Django Settings
# ============================================================================

# Debug mode (NEVER True in production!)
DEBUG=False

# Secret key for cryptographic signing (generate a new one for production)
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=change-me-to-a-real-secret-key-minimum-50-chars

# Allowed hosts (your domain)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourdomain.com

# ============================================================================
# Database Settings
# ============================================================================

# PostgreSQL password (change this!)
DB_PASSWORD=change_me_to_secure_password_123

# ============================================================================
# Security Settings (Production)
# ============================================================================

# Redirect HTTP to HTTPS
SECURE_SSL_REDIRECT=True

# Set secure flag on session cookies (requires HTTPS)
SESSION_COOKIE_SECURE=True

# Set secure flag on CSRF cookies (requires HTTPS)
CSRF_COOKIE_SECURE=True

# HSTS - HTTP Strict Transport Security
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# Docker Configuration
# ============================================================================

# Image name and tag
DOCKER_IMAGE_NAME=house-project
DOCKER_IMAGE_TAG=latest

# Container names
CONTAINER_NAME_WEB=house_project_web
CONTAINER_NAME_DB=house_project_db
CONTAINER_NAME_NGINX=house_project_nginx

# Port mappings
PORT_HTTP=80
PORT_HTTPS=443
PORT_DB=5432
PORT_WEB=8000
